---
layout: none
permalink: /sitemap.xml
---

<?xml version="1.0" encoding="UTF-8"?>
<urlset
  xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
  xmlns:xhtml="http://www.w3.org/1999/xhtml">

  {% for page in site.pages %}
    {% unless page.noindex or page.exclude_from_sitemap %}
      <url>
        <loc>{{ site.url }}{{ page.url | replace: 'index.html', '' }}</loc>
        <lastmod>{{ page.last_modified_at | default: site.time | date: "%Y-%m-%d" }}</lastmod>
        <changefreq>monthly</changefreq>
        <priority>
          {% if page.url == "/" %}1.0
          {% elsif page.url == "/services/" %}0.9
          {% elsif page.url == "/contact/" %}0.9
          {% elsif page.url contains "/portfolio" %}0.9
          {% elsif page.url contains "/reviews" %}0.8
          {% else %}0.6
          {% endif %}
        </priority>
      </url>
    {% endunless %}
  {% endfor %}

</urlset>
